
<div class="row">
	<div class="col-xs-12">
		<h1>All Apps</h1>
		<% if @applications.any? %>
		<div class="row">
			<div class="col-xs-12">
				<table class="table">
					<thead>
						<tr>
							<th>Name</th>
							<th>Created</th>
							<th>Owner</th>
							<th>Status</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @applications.each do |app| %>
						<tr>
							<td>
								<%= app.name %></td>
							<td>
								<%= app.created_at.strftime("%Y-%m-%d") %></td>
							<td>
								<%= app.user.firstname %>
								<%= app.user.lastname %></td>
							<td>
								<%= (app.active ? "Active" : "Revoked") %></td>
							<td>
								<%= link_to 'Details', edit_admin_application_path(app), :class =>'btn btn-info btn-xs' %></td>
						</tr>
						<% end %></tbody>
				</table>
			</div>
		</div>

		<% else %>
		<div class="row col-xs-12">No apps</div>
		<% end %></div>
</div>