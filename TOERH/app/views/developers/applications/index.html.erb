
<div class="row">
	<div class="col-xs-12">
		<h1>My Apps</h1>
		<div class="row">
			<div class="col-xs-12">
				<%= link_to "New Application", new_application_path, class: 'btn btn-primary btn-sm' %>
			</div>
		</div>
		<% if @applications.any? %>
		<div class="row">
			<div class="col-xs-12">
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Created</th>
						<th>Status</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @applications.each do |app| %>
					<tr>
						<td>
							<%= app.name %></td>
						<td>
							<%= app.created_at %></td>
						<td>
								<%= (app.active ? "Active" : "Revoked") %></td>
						<td>
							<%= link_to 'Details', application_path(app), :class => 'btn btn-info btn-xs' %></td>
					</tr>
					<% end %></tbody>
			</table>
			</div>
		</div>
		
		<% else %>
			<div class="row col-xs-12">You have not created any applications.</div>
		<% end %></div>
</div>